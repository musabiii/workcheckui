<Window x:Class="WorkCheck.Views.BreakOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#DD1E1E2E"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized">

    <Grid x:Name="OuterRoot" Opacity="0">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#E6181825" CornerRadius="16"
                BorderBrush="#22FFFFFF" BorderThickness="1"
                Padding="0" MinWidth="420" MaxWidth="500">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" Opacity="0.6" ShadowDepth="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border x:Name="Stripe" Grid.Row="0" CornerRadius="16,16,0,0"/>

                <!-- Prompt mode -->
                <StackPanel x:Name="PromptPanel" Grid.Row="1" Margin="36,28,36,32">
                    <TextBlock x:Name="TitleBlock"
                               Foreground="#CDD6F4"
                               FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <TextBlock x:Name="MessageBlock"
                               Foreground="#BAC2DE"
                               FontSize="15"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,28,0,0">

                        <Button x:Name="BreakBtn" Content="☕  Сделать перерыв"
                                Click="OnBreakClick" Cursor="Hand"
                                FontSize="14" Foreground="#1E1E2E"
                                Padding="20,10" Margin="0,0,12,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder"
                                                        Background="#A6E3A1"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#B8EBB2"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="ContinueBtn" Content="Продолжить работать"
                                Click="OnContinueClick" Cursor="Hand"
                                FontSize="14" Foreground="#BAC2DE"
                                Padding="20,10">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder"
                                                        Background="#45475A"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#585B70"/>
                                                        <Setter Property="Foreground" Value="#CDD6F4"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Timer mode -->
                <StackPanel x:Name="TimerPanel" Grid.Row="1" Margin="36,28,36,32"
                            Visibility="Collapsed">
                    <TextBlock Text="☕  Перерыв"
                               Foreground="#A6E3A1"
                               FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="CountdownBlock"
                               Foreground="#CDD6F4"
                               FontSize="56" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"
                               FontFamily="Consolas"/>

                    <TextBlock Text="Отдыхайте, активность не учитывается"
                               Foreground="#6C7086"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>

                    <!-- Break activity suggestions -->
                    <Border Background="#11FFFFFF" CornerRadius="8"
                            Margin="0,20,0,0" Padding="16,12">
                        <StackPanel>
                            <TextBlock Text="Чем заняться:" Foreground="#A6ADC8"
                                       FontSize="13" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock Text="•  Разомни шею" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  10 приседаний" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  Разминка для глаз" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  Выпей воды" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  Убери стол" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  Приоритеты на следующий час" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  Планы на вечер" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                            <TextBlock Text="•  Посчитай траты" Foreground="#6C7086" FontSize="12.5" Margin="0,2"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="CancelBreakBtn" Content="Прервать"
                            Click="OnCancelBreakClick" Cursor="Hand"
                            FontSize="14" Foreground="#BAC2DE"
                            Padding="24,10"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="BtnBorder"
                                                    Background="#45475A"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="BtnBorder" Property="Background" Value="#585B70"/>
                                                    <Setter Property="Foreground" Value="#CDD6F4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
