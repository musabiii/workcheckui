<Window x:Class="WorkCheck.Views.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        Focusable="False"
        WindowStartupLocation="Manual"
        SizeToContent="Height"
        Width="400">

    <!-- Padding reserves space for the DropShadowEffect so it isn't clipped -->
    <Grid x:Name="OuterRoot" Margin="10,10,10,12">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" Y="20"/>
        </Grid.RenderTransform>

        <Border x:Name="RootBorder" Background="#E6181825" CornerRadius="10"
                BorderBrush="#22FFFFFF" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="14" Opacity="0.45" ShadowDepth="2"/>
            </Border.Effect>

            <Grid MinHeight="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Color stripe -->
            <Border x:Name="Stripe" Grid.Column="0" CornerRadius="10,0,0,10"/>

            <!-- Content -->
            <Grid Grid.Column="1" Margin="14,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title + Close -->
                <Grid Grid.Row="0">
                    <TextBlock x:Name="TitleBlock" Foreground="#CDD6F4"
                               FontSize="14" FontWeight="Bold"
                               VerticalAlignment="Center" TextWrapping="Wrap"/>
                    <Button x:Name="CloseBtn" Content="âœ•"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Click="OnCloseClick"
                            Cursor="Hand" FontSize="12"
                            Foreground="#6C7086" Background="Transparent" BorderThickness="0"
                            Padding="4,2">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                                    <Setter Property="Foreground" Value="#CDD6F4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Message -->
                <TextBlock x:Name="MessageBlock" Grid.Row="1"
                           Foreground="#BAC2DE" FontSize="12.5"
                           Margin="0,4,0,0" TextWrapping="Wrap"/>

                <!-- Secondary -->
                <TextBlock x:Name="SecondaryBlock" Grid.Row="2"
                           Foreground="#A6ADC8" FontSize="11.5"
                           Margin="0,2,0,0" TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <!-- Quote -->
                <TextBlock x:Name="QuoteBlock" Grid.Row="3"
                           Foreground="#6C7086" FontSize="11"
                           FontStyle="Italic" Margin="0,6,0,0"
                           TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Border>
    </Grid>
</Window>
