<Window x:Class="WorkCheck.Views.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WorkCheck"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="True"
        Width="340" Height="180">

    <Border Background="{Binding WindowBgBrush}" CornerRadius="12"
            BorderBrush="#33FFFFFF" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="16" Opacity="0.4" ShadowDepth="2"/>
        </Border.Effect>

        <Grid Margin="16,12,16,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="WorkCheck" Foreground="#6C7086"
                           FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="☕" Command="{Binding ManualBreakCommand}"
                            Style="{StaticResource HeaderButton}" Margin="0,0,4,0"
                            ToolTip="Ручной перерыв"/>
                    <Button Content="↺" Command="{Binding ResetCommand}"
                            Style="{StaticResource HeaderButton}" Margin="0,0,4,0"/>
                    <Button Content="⚙" Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource HeaderButton}" Margin="0,0,4,0"/>
                    <Button Content="✕" Command="{Binding CloseAppCommand}"
                            Style="{StaticResource CloseButton}"/>
                </StackPanel>
            </Grid>

            <!-- Stats -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Текущая сессия (всегда) -->
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="{Binding SessionBrush}" FontSize="13.5">
                        <Run Text="{Binding SessionIcon, Mode=OneWay}"/><Run Text="{Binding SessionLabel, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Grid.Column="1" Text="{Binding CurrentSessionText}" Foreground="{Binding SessionBrush}"
                               FontSize="13.5" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                </Grid>

                <!-- Отработано / За компьютером -->
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding WorkedLabel}" Foreground="#BAC2DE" FontSize="13.5"/>
                    <TextBlock Grid.Column="1" Text="{Binding WorkedTimeText}" Foreground="#CDD6F4"
                               FontSize="13.5" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                </Grid>

                <!-- Вне работы / Вне компьютера (всегда) -->
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding AwayLabel}" Foreground="#BAC2DE" FontSize="13.5"/>
                    <TextBlock Grid.Column="1" Text="{Binding AwayTimeText}" Foreground="#CDD6F4"
                               FontSize="13.5" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Footer: mode toggle + status -->
            <Grid Grid.Row="2" Margin="0,6,0,0">
                <Button Content="{Binding ModeButtonText}"
                        Command="{Binding ToggleModeCommand}"
                        HorizontalAlignment="Left"
                        Style="{StaticResource HeaderButton}"
                        FontSize="11"/>

                <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusBrush}"
                           FontSize="11" HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>
