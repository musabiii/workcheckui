<Window x:Class="WorkCheck.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки — WorkCheck"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="520"
        ShowInTaskbar="False">

    <Border Background="#1E1E2E" CornerRadius="12"
            BorderBrush="#33FFFFFF" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.5" ShadowDepth="3"/>
        </Border.Effect>

        <Grid Margin="20,16,20,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Настройки" Foreground="#CDD6F4" FontSize="16" FontWeight="Bold"/>
                <Button Content="✕" HorizontalAlignment="Right"
                        Style="{StaticResource CloseButton}"
                        Click="OnCancelClick"/>
            </Grid>

            <!-- Settings form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0,0,4,0">
            <StackPanel>
                <TextBlock Text="Pomodoro (мин)" Foreground="#BAC2DE" FontSize="12" Margin="0,0,0,4"/>
                <TextBox Text="{Binding PomodoroMinutes, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBox}"/>

                <TextBlock Text="Pomodoro 2 (мин)" Foreground="#BAC2DE" FontSize="12" Margin="0,10,0,4"/>
                <TextBox Text="{Binding Pomodoro2Minutes, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBox}"/>

                <TextBlock Text="Короткий перерыв (мин)" Foreground="#BAC2DE" FontSize="12" Margin="0,10,0,4"/>
                <TextBox Text="{Binding ShortBreakMinutes, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBox}"/>

                <TextBlock Text="Неактивность (мин)" Foreground="#BAC2DE" FontSize="12" Margin="0,10,0,4"/>
                <TextBox Text="{Binding InactivityMinutes, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBox}"/>

                <TextBlock Text="Telegram Bot Token" Foreground="#BAC2DE" FontSize="12" Margin="0,10,0,4"/>
                <PasswordBox x:Name="TokenBox" Style="{StaticResource DarkPasswordBox}"/>

                <TextBlock Text="Telegram Chat ID" Foreground="#BAC2DE" FontSize="12" Margin="0,10,0,4"/>
                <TextBox Text="{Binding TelegramChatId, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBox}"/>

                <CheckBox Content="Отправлять в Telegram"
                          IsChecked="{Binding TelegramEnabled}"
                          Foreground="#BAC2DE" FontSize="12" Margin="0,12,0,0">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>
            </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Отмена" Style="{StaticResource SecondaryButton}"
                        Click="OnCancelClick" Margin="0,0,8,0"/>
                <Button Content="Сохранить" Style="{StaticResource PrimaryButton}"
                        Click="OnSaveClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
